<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   
    <title>Log In</title>
</head>
<body class="bg-light ">
    <section class="bg-warning text-light text-center py-mb-3 mb-3  bg-gradient">
       
        <div><h1><b>Hello <%=Users[UserId].Name %>, <br> welcome</b></h1>
        <div><p class=" py-sm-3">.........</p></div>
       
    </section>
    <div class=" text-warning text-center">
    <h2 class="mt-2"><b>.........................................................</b></h2>
    <h3 class="">.....................................</h3>
    <h4 class=""><b>............................................</b></h4>
    <h4 class=""><b>Active Users</b></h4>
    </div>
    
    <!-- List of Users-->

    <section >
        <div class="container border border-warning rounded-3 ">
            <div class="d-md-flex justify-content-center"> 
                <div class="list-group  col-md-10 p-sm-2 m-2 " >
                    <%  var itemId=0;
                        Users.forEach(function(element){ %>
                    <a href="#<%=itemId%>" list-items class="list-group-item list-group-item-action  p-2 m-2" aria-current="true">
                        <div class="d-flex w-100 justify-content-between shadow p-2 mb-2 " >
                            <h5 class="mb-1"><%=element.Surname%>, <%=element.Name%> </h5>
                            <small>Date of Birth : <%=element.Date%></small>                           
                            
                        </div>
                            <p class="mb-1"><%=element.Country%></p>
                            <small><%=element.Comments%></small>
                            <!--Hidden Div-->
                        <div id="<%=itemId%>" style="display:none"> 
                            <p class="mb-1"><%=element.Birthday%> </p>  
                            <br>Country : <%=element.Country%>
                            <br>Favourite Color : <%=element.Color%><br><br>
                            <div><h3>Contact Details</h3>
                                <ul class="list-group list-group-flush ">
                                        <li class="list-group-item"> 
                                        Email : <%=element.Email%> </li>
                                        <li class="list-group-item">
                                        Contact Number : <%=element.Contact%>     
                                        </li>
                                </ul>
                            </div>
                        </div>
                     </a>
                     <div class=" text-warning text-center">
                        <small>.....................................</small>
                        <small>...................................</small>
                        <small>.........................</small>
                    </div>
                    <% itemId++; })%>
                </div>
            </div>
        </div>
    </section>  
    <div class=" text-center">
    <p>Click <a href="/logout">here </a>to log out</p>  
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script> 
    
</body>

<script>
    var items = document.querySelectorAll('[list-items]');
    items.forEach((item,index) =>{
        item.addEventListener('click',()=>{
            var theDiv = document.getElementById(index);
            console.log(index)
                if(theDiv.style.display == 'none') {
                    theDiv.style.display = 'block';
                
                } else {
                    theDiv.style.display = 'none';
                
                }
        })
    })

</script>

</html>


